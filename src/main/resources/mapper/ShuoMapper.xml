<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eyes.eyesspace.mapper.ShuoMapper">
    <insert id="addShuoPics">
        insert into shuoshuo_pic (shuoshuo_id, url, create_time) values
        <foreach collection="picList" item="item" separator=",">
            (
                #{id},
                #{item},
                now()
            )
        </foreach>
    </insert>

    <select id="getShuoListInfo" resultType="java.lang.Integer">
        select count(*) from shuoshuo
        <where>
            <if test="status!=null">
                status=#{status}
            </if>
        </where>
    </select>
</mapper>